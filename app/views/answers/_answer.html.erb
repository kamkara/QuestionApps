<%= content_tag :div, id: dom_id(answer), class: "mt-3 p-2 #{answer.correct_answer? ? "bg-success bg-opacity-25" : ""}" do %>
    <div><%= answer.content %></div>
    <div>
        <em>
            created by
            <%= answer.user.email %>
            on
            <%= answer.created_at %>
        </em>
    </div>

    <%= turbo_frame_tag dom_id(answer, 'actions'), src: question_answer_actions_path(answer.question, answer) %>
    <hr>
    <% end %>
